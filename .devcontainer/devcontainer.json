{
	"name": "Go 1.25 Development",
	"image": "golang:1.25.7-trixie",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"installOhMyZsh": true,
			"upgradePackages": true
		},
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"eamodio.gitlens",
				"ms-azuretools.vscode-docker",
				"streetsidesoftware.code-spell-checker"
			],
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.lintTool": "golangci-lint",
				"go.lintOnSave": "package",
				"go.formatTool": "goimports",
				"go.testFlags": ["-v"],
				"go.coverOnSave": false,
				"go.delveConfig": {
					"dlvLoadConfig": {
						"followPointers": true,
						"maxVariableRecurse": 1,
						"maxStringLen": 120,
						"maxArrayValues": 64,
						"maxStructFields": -1
					},
					"apiVersion": 2,
					"showGlobalVariables": true
				}
			}
		}
	},
	"postCreateCommand": "go install -v golang.org/x/tools/gopls@latest && go install -v github.com/go-delve/delve/cmd/dlv@latest && go install -v honnef.co/go/tools/cmd/staticcheck@latest && go install -v golang.org/x/tools/cmd/goimports@latest && go install -v github.com/golangci/golangci-lint/cmd/golangci-lint@latest",
	"remoteUser": "vscode",
	"containerUser": "vscode",
	"updateRemoteUserUID": true,
	"mounts": [
		"source=${localWorkspaceFolder}/nano_config.json,target=/home/vscode/.picoclaw/config.json,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/workspace,target=/home/vscode/.picoclaw/workspace,type=bind,consistency=cached"
	],
	"forwardPorts": []
}
